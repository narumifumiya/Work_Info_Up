<!DOCTYPE html>
<html>
  <head>
    <title>WorkInfoUp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">

     <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Work-Info-Up</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to companies_path, class: 'nav-link text-dark' do %>
                  <i class="far fa-building"></i> 得意先一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-users"></i> メンバー
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-user"></i> マイページ
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_companies_path , class: 'nav-link text-dark' do %>
                  <i class="far fa-building"></i> 得意先一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_departments_path, class: 'nav-link text-dark' do %>
                  <i class="far fa-object-group"></i> 部署一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to  admin_users_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-users"></i> メンバー
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to  destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link text-dark' do %>
                  <i class="far fa-building"></i> 得意先一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-users"></i>メンバー
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-user-plus"></i> 新規登録
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-in-alt"></i> ログイン
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

      <!-- フラッシュメッセージ -->
    <% if flash[:notice] %>
      <div class="text-success">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="text-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

  <main class="mt-5">
    <%= yield %>
  </main>

  </body>
</html>
