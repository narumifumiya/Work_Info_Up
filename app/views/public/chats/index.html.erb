<div class="container">
  <h2 class="text-center"><%= @group.name%></h2>
  <h4 class="text-center">チャットルーム</h4>

  <div class="row mt-5">
    <div class="col-11 col-md-10 mx-auto">
      <div class="message mx-auto" id="messages_area">
        <%= render 'public/chats/index', group: @group %>
      </div>
      <div class="mt-5">
        <%= render 'public/chats/form', group: @group, chat: @chat %>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
    <p class="text-center"><%= link_to "戻る", group_path(@group.id), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>

</div>