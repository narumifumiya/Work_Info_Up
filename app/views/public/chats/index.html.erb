<div class="container">
  <h2 class="text-center"><%= @group.name%></h2>
  <h4 class="text-center">チャットルーム</h4>

  <div class="row mt-5">
    <div class="col-11 col-md-10 mx-auto">

      <div class="message" style="width: 400px;">
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <p style="text-align: right;"><%= chat.message %><%= link_to '削除', group_chat_path(chat.group, chat.id), method: :delete %></p>
          <% else %>
            <p style="text-align: left;"><%= chat.message %></p>
          <% end %>
        <% end %>
      </div>

      <%= form_with model: [@group, @chat] do |f| %>
        <%= f.text_field :message %>
      <% end %>

    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
    <p class="text-center"><%= link_to "戻る", group_path(@group.id) %></p>
    </div>
  </div>

</div>