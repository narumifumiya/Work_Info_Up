<div class="container">
  <h2 class="text-center"><%= @company.name %></h2>
  <h4 class="text-center">プロジェクト編集</h4>

  <div class="col-10 col-md-7 mx-auto text-center">
    <%= render 'layouts/errors', obj: @project %>
  </div>

  <div class="row mt-5">
    <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 mx-auto px-5">
      <%= render 'public/projects/form', company: @company, project: @project %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
      <p class="text-center"><%= link_to "戻る", company_project_path(@company), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>

</div>