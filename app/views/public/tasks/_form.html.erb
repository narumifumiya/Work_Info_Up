<%= form_with model: [user, task]  do |f| %>

  <div class="form-group row">
    <label for="title", class="col-md-3 mx-auto">タイトル</label>
    <div class="col-md-9"><%= f.text_field :title,  class: "form-control", id: "title" %></div>
  </div>

  <div class="form-group row">
    <label for="content", class="col-md-3 mx-auto">内容</label>
    <div class="col-md-9"><%= f.text_area :content, rows: '5', class: "form-control", id: "content" %></div>
  </div>

  <div class="form-group row">
    <label for="start_time", class="col-md-3 mx-auto">日程</label>
    <div class="col-md-9"><%= f.date_field :start_time, class: 'form-control', id: "start_time" %></div>
  </div>

  <div class="row mt-3">
    <div class="col-md-3 mx-auto"></div>
    <div class="col-md-9"><%= f.submit "登録", class: "btn btn-sm btn-success"%></div>
  </div>

<% end %>