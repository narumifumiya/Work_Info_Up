<%= form_with model: [user, task]  do |f| %>

  <div class="form-group">
    <%= f.label :title, 'タイトル' %><span class="bg-danger text-white rounded ml-1 form-parts">必須</span>
    <%= f.text_field :title, autofocus: true, class: "form-control title" %>
  </div>

  <div class="form-group">
    <%= f.label :content, '内容' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
    <%= f.text_area :content, rows: '5', class: "form-control content" %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, '日程' %><span class="bg-danger text-white rounded ml-1 form-parts">必須</span>
    <%= f.date_field :start_time, class: "form-control start_time" %>
  </div>

  <div class="form-group">
    <%= f.submit "登録", class: "btn btn-block btn-success"%>
  </div>

<% end %>