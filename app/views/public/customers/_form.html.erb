<%= form_with model: [company, customer] do |f| %>

  <div class="form-group row">
    <label for="name", class="col-md-3 mx-auto">名前</label>
    <div class="col-md-9"><%= f.text_field :name,  class: "form-control", id: "name" %></div>
  </div>

  <div class="form-group row">
    <label for="email", class="col-md-3 mx-auto">メールアドレス</label>
    <div class="col-md-9"><%= f.email_field :email,  class: "form-control", id: "email" %></div>
  </div>

  <div class="form-group row">
    <label for="phone_number", class="col-md-3 mx-auto">電話番号</label>
    <div class="col-md-9"><%= f.text_field :phone_number,  class: "form-control", id: "phone_number" %></div>
  </div>

  <div class="form-group row">
    <label for="department", class="col-md-3 mx-auto">所属部署</label>
    <div class="col-md-9"><%= f.text_field :department,  class: "form-control", id: "department" %></div>
  </div>

  <div class="form-group row">
    <label for="position", class="col-md-3 mx-auto">役職</label>
    <div class="col-md-9"><%= f.text_field :position,  class: "form-control", id: "position" %></div>
  </div>

  <div class="row">
    <label for="image", class="col-md-3 mx-auto">画像</label>
    <div class="col-md-9"><%= f.file_field :customer_image, accept: 'image/*', id: "image" %></div>
  </div>

  <div class="row mt-3">
    <div class="col-md-3 mx-auto"></div>
    <div class="col-md-9"><%= f.submit "登録", class: "btn btn-sm btn-success"%></div>
  </div>

<% end %>