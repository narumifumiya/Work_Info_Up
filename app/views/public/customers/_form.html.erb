<%= form_with model: [company, customer] do |f| %>

  <div class="form-group">
    <%= f.label :name, '名前' %><span class="bg-danger text-white rounded ml-1 form-parts">必須</span>
    <%= f.text_field :name, autofocus: true, class: "form-control name" %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
    <%= f.email_field :email, class: "form-control email" %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, '電話番号' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
    <%= f.text_field :phone_number, class: "form-control phone_number" %>
  </div>

  <div class="form-group">
    <%= f.label :department, '所属部署' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
    <%= f.text_field :department, class: "form-control department" %>
  </div>

  <div class="form-group">
    <%= f.label :position, '役職' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
    <%= f.text_field :position, class: "form-control position" %>
  </div>

  <div class="form-group">
    <label for="image">画像</label><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
    <div><%= f.file_field :customer_image, accept: 'image/*', id: "image" %></div>
  </div>

  <div class="form-group">
    <%= f.submit "登録", class: "btn btn-block btn-success"%>
  </div>

<% end %>