<div class="containern">
  <h2 class="text-center">顧客新規登録</h2>

  <div class="row">
    <div class="col-md-7 mx-auto">
    <%= form_with model: [@company, @customer], method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>名前</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <th>所属部署</th>
          <td><%= f.text_field :department %></td>
        </tr>
        <tr>
          <th>役職</th>
          <td><%= f.text_field :position %></td>
        </tr>
        <tr>
          <th>画像</th>
          <td><%= f.file_field :customer_image, accept: 'image/*' %></td>
        </tr>
          <th></th>
          <td><%= f.submit "更新", class: "btn btn-sm btn-success"%></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
    <p class="text-right"><%= link_to "戻る", company_customer_path(@company, @customer) %></p>
    </div>
  </div>

</div>