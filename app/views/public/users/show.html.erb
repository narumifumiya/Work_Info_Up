<div class="container">
  <h2 class="text-center mb-5">メンバー詳細</h2>
  <div class="row">
    <div class="col-md-6 text-center">
      <%= image_tag @user.get_profile_image(300,300) %>
    </div>
    <div class="col-md-6">
      <p>名前：<%= @user.name %></p>
      <p>フリガナ：<%= @user.name_kana%></p>
      <p>役職：<%= @user.position %></p>
      <p>所属部署：
        <% if @user.department_id.present? %>
          <%= @user.department.name %>
        <% end %>
      </p>
      <p>メールアドレス：<%= @user.email %></p>
      <p>電話番号：<%= @user.phone_number %></p>

        <% if @user.is_deleted == false %>
          <p class="text-success">在籍中</p>
        <% else %>
          <p class="text-danger">退社済</p>
        <% end %>

      <div>
        <% if @user.id == current_user.id %>
          <%= link_to "編集", edit_user_path(@user), class: "btn btn-sm btn-success"%>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
    <p class="text-center"><%= link_to "一覧へ戻る", users_path %></p>
    </div>
  </div>

</div>