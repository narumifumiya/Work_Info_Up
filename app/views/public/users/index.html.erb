<div class="container">
  <h2 class="text-center">メンバー</h2>

  <div class="row">

    <div class="col-md-8">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>名前</th>
            <th>所属部署</th>
            <th>役職</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, public_user_path(user.id) %></td>
              <td>
                <%if user.department_id.present? %>
                  <%= user.department.name %>
                <% end %>
              </td>
              <td><%= user.position %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-3 offset-md-1 text-center">

      <div class="card">
        <div class="card-header">
          部署一覧
        </div>
        <ul class="list-group list-group-flush">
          <% @departments.each do |department| %>
          <li class="list-group-item">
            <%= link_to department.name, department_path(department.id), class: 'text-reset' %>
          </li>
          <% end %>
        </ul>
      </div>


  </div>


  </div>


</div>