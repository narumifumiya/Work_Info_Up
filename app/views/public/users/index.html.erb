<div class="container">
  <h2 class="text-center">メンバー</h2>

  <div class="row mt-5">

    <div class="col-md-8">
      <%= render 'public/users/index', users: @users %>
    </div>

    <div class="col-md-3 offset-md-1 text-center">

      <div class="card">
        <div class="card-header">
          部署一覧
        </div>
        <ul class="list-group list-group-flush">
          <% @departments.each do |department| %>
          <li class="list-group-item">
            <%= link_to department.name, department_path(department.id), class: 'text-reset' %>
          </li>
          <% end %>
        </ul>
      </div>


  </div>


  </div>


</div>