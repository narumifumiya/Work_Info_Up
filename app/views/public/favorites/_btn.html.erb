<% if project.favorited_by?(current_user) %>
  <p>
    <%= link_to company_project_favorites_path(company, project), method: :delete, class: 'text-danger', remote: true do %>
      ♥<%= project.favorites.count %> いいね
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to company_project_favorites_path(company, project), method: :post, class: 'text-danger', remote: true do %>
      ♡<%= project.favorites.count %> いいね
    <% end %>
  </p>
<% end %>