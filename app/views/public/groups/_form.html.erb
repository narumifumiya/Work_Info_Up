<%= form_with model: group, local: true do |f| %>

  <div class="form-group row">
    <div class="col-md-3 mx-auto"><label for="name">グループ名</label></div>
    <div class="col-md-9"><%= f.text_field :name, class: "form-control", id: "name" %></div>
  </div>

  <div class="form-group row">
    <div class="col-md-3 mx-auto"><label for="introduction">紹介文</label></div>
    <div class="col-md-9"><%= f.text_area :introduction, class: 'form-control', id: "introduction"  %></div>
  </div>

  <div class="form-group row">
    <div class="col-md-3 mx-auto"><label for="image">グループ画像</label></div>
    <div class="col-md-9"><%= f.file_field :group_image, accept: 'image/*', id: "image" %></div>
  </div>
  
  <div class="row mt-3">
    <div class="col-md-3 mx-auto"></div>
    <div class="col-md-9"><%= f.submit "登録", class: "btn btn-sm btn-success"%></div>
  </div>

<% end %>