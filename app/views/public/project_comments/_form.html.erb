<%= form_with model: [company, project, project_comment], local: false do |f| %>
  <div class="form-group", style="width:100%;">
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに（最大140字まで）", class: "form-control comment_textarea" %>
  </div>
  <div class="text-right">
    <%= button_tag :type => "submit", :class =>"btn btn-sm btn-info rounded-end" do %>
      <i class="fas fa-paper-plane"></i>
    <% end %>
  </div>
<% end %>