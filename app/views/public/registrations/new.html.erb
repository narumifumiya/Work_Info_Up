<div class="container">
  <h2 class="text-center">Sign up</h2>

    <div class="row mt-5">
      <div class="col-10 col-sm-8 col-md-8 col-lg-7 col-xl-6 mx-auto card p-5">
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :name, '名前' %><span class="bg-danger text-white rounded ml-1 form-parts">必須</span>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control name",placeholder: "Name" %>
          </div>

          <div class="form-group">
            <%= f.label :name_kana, '名前（フリガナ）' %><span class="bg-danger text-white rounded ml-1 form-parts">必須</span>
            <%= f.text_field :name_kana, autocomplete: "name_kana", class: "form-control name_kana", placeholder: "Name Kana" %>
          </div>

          <div class="form-group">
            <%= f.label :email, 'メールアドレス' %><span class="bg-danger text-white rounded ml-1 form-parts">必須</span>
            <%= f.email_field :email, autocomplete: "email", class: "form-control email", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, '電話番号' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
            <%= f.text_field :phone_number, autocomplete: "phone_number", class: "form-control phone_number", placeholder: "Phone Number" %>
          </div>

          <div class="form-group">
            <%= f.label :password, 'パスワード' %><span class="bg-danger text-white rounded ml-1 form-parts">必須</span><br>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control password", placeholder: "Password" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, 'パスワード確認用' %><span class="bg-danger text-white rounded ml-1 form-parts">必須</span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control password_confirmation", placeholder: "Password confirmation" %>
          </div>

          <div class="form-group ">
            <%= f.submit "Log in", class: "btn btn-block btn-primary"%>
          </div>

        <% end %>
      </div>
    </div>
  <%#= render "public/shared/links" %>
</div>
