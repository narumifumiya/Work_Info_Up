<div class="container">
  <h2 class="text-center"><%= @company.name %></h2>
  <h4 class="text-center mb-5">事業所 編集</h4>

  <div class="col-10 col-md-7 mx-auto text-center">
    <%= render 'layouts/errors', obj: @office %>
  </div>

  <div class="row">
    <div class="col-10 col-md-7 mx-auto">
      <%= render 'public/offices/form', company: @company, office: @office %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
      <p class="text-center"><%= link_to "戻る", company_office_path(@company), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>

</div>