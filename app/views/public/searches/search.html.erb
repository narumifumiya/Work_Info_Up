<div class="container">
  <h2 class="text-center"><%= @range %> 検索結果</h2>

  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
      <% if @range == "ユーザー" %>
        <%= render 'public/users/index', users: @users %>

      <% elsif @range == "得意先" %>
        <%= render 'public/companies/index', companies: @companies %>

      <% elsif @range == "プロジェクト" %>
        <%= render 'public/projects/index', projects: @projects %>

      <% else %>
        <%= render 'public/projects/index', projects: @tags %>

      <% end %>
    </div>
  </div>

</div>


