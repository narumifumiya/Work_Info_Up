<div class="table-responsive">
  <table class="table table-hover text-nowrap bg-light">
    <thead class="thead-dark">
      <tr>
        <th>名前</th>
        <th>所属部署</th>
        <th>役職</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr class="table_tr_link" data-href="/admin/users/<%= user.id %>">
          <td><%= user.name %></td>
          <td>
            <%if user.department_id.present? %>
              <%= user.department.name %>
            <% end %>
          </td>
          <td><%= user.position %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>