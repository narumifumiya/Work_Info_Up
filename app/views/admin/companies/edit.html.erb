<div class="container">
  <h2 class="text-center">得意先編集</h2>

  <div class="col-10 col-md-7 mx-auto">
    <%= render 'layouts/errors', obj: @company %>
  </div>

  <div class="row mt-5">
    <div class="col-10 col-md-7 mx-auto">
    <%= form_with model:@company, url: admin_company_path(@company), method: :patch do |f| %>

      <div class="form-group row">
        <div class="col-md-3 mx-auto"><label for="name">企業名</label></div>
        <div class="col-md-9"><%= f.text_field :name,  class: "form-control", id: "name" %></div>
      </div>

      <div class="row">
        <div class="col-md-3 mx-auto"><label for="image">画像</label></div>
        <div class="col-md-9"><%= f.file_field :company_image, accept: 'image/*', id: "image" %></div>
      </div>

      <div class="row mt-3">
        <div class="col-md-3 mx-auto"></div>
        <div class="col-md-9"><%= f.submit "登録", class: "btn btn-sm btn-success"%></div>
      </div>

    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-10 col-md-9">
    <p class="text-right"><%= link_to "戻る", admin_company_path(@company) %></p>
    </div>
  </div>

</div>