<div class="container">
  <h2 class="text-center">得意先編集</h2>

  <div class="row">
    <div class="col-md-7 mx-auto">
    <%= form_with model:@company, url: admin_company_path(@company), method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>企業名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th>画像</th>
          <td><%= f.file_field :company_image, accept: 'image/*' %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "更新", class: "btn btn-sm btn-success"%></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
    <p class="text-right"><%= link_to "戻る", admin_departments_path %></p>
    </div>
  </div>
</div>