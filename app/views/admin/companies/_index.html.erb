<div class="table-responsive">
  <table class="table table-hover text-nowrap bg-light">
    <thead class="thead-dark">
      <tr>
        <th>企業名</th>
      </tr>
    </thead>
    <tbody>
      <% companies.each do |company| %>
        <tr>
          <td><%= link_to company.name, admin_company_path(company.id), class: 'text-dark' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>