<div class="container">
  <h2 class="text-center">プロジェクト編集</h2>

  <div class="col-10 col-md-7 mx-auto text-center">
    <%= render 'layouts/errors', obj: @project %>
  </div>

  <div class="row mt-5">
    <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 mx-auto px-5">
    <%= form_with model: [@company, @project], url:admin_company_project_path(@company, @project), method: :patch do |f| %>

      <div class="form-group">
        <%= f.label :name, 'プロジェクト名' %><span class="bg-danger text-white rounded ml-1 form-parts">必須</span>
        <%= f.text_field :name, autofocus: true, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :contract_amount, '契約金額' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
        <%= f.text_field :contract_amount, class: "form-control contract_amount" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, '説明(140文字以内)' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label :tag_name, 'タグ' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
        <%= f.text_field :tag_name,value: @tag_list, class: "form-control tag_name", placeholder: ",区切ると複数登録可能" %>
      </div>

      <div class="form-group">
        <label for="image">画像(複数登録可能)</label><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
        <div><%= f.file_field :project_images, accept: 'image/*', multiple: true, id: "image" %></div>
      </div>

      <div class="form-group">
        <%= f.label :start_date, '開始日' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
        <%= f.date_field :start_date, class: "form-control start_date" %>
      </div>

      <div class="form-group">
        <%= f.label :end_date, '終了日' %><span class="bg-secondary text-white rounded ml-1 form-parts">任意</span>
        <%= f.date_field :end_date, class: "form-control end_date" %>
      </div>

      <div class="form-group">
        <div class="mb-1">注文ステータス</div>
        <div class="d-flex justify-content-start">
          <div class="mr-3"><%= f.radio_button :order_status, "under_negotiation" %><%= f.label :order_stauts_under_negotiation, "営業中" %></div>
          <div class="mr-3"><%= f.radio_button :order_status, "ordered" %><%= f.label :order_stauts_ordered, "受注済" %></div>
          <div><%= f.radio_button :order_status, "lost_orders" %><%= f.label :order_lost_orders, "失注" %></div>
        </div>
      </div>

      <div class="form-group">
        <div class="mb-1">進捗ステータス</div>
        <div class="d-flex justify-content-start">
          <div class="mr-3"><%= f.radio_button :progress_status, "not_started_yet" %><%= f.label :progress_stauts_not_started_yet, "未着手" %></div>
          <div class="mr-3"><%= f.radio_button :progress_status, "while_working" %><%= f.label :progress_stauts_while_working, "作業中" %></div>
          <div><%= f.radio_button :progress_status, "completion" %><%= f.label :progress_stauts_completion, "完了" %></div>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "登録", class: "btn btn-block btn-success"%>
      </div>

    <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
      <p class="text-center"><%= link_to "戻る", admin_company_project_path(@company), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>

</div>
