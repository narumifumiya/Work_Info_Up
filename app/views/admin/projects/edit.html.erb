<div class="container">
  <h2 class="text-center">プロジェクト編集</h2>

  <div class="col-10 col-md-7 mx-auto">
    <%= render 'layouts/errors', obj: @project %>
  </div>

  <div class="row mt-5">
    <div class="col-10 col-md-7 mx-auto">
    <%= form_with model: [@company, @project], url:admin_company_project_path(@company, @project), method: :patch do |f| %>
      <div class="form-group row">
        <label for="name", class="col-md-3 mx-auto">プロジェクト名</label>
        <div class="col-md-9"><%= f.text_field :name,  class: "form-control", id: "name" %></div>
      </div>

      <div class="form-group row">
        <label for="contract_amount", class="col-md-3 mx-auto">契約金額</label>
        <div class="col-md-9"><%= f.text_field :contract_amount,  class: "form-control", id: "contract_amount" %></div>
      </div>

      <div class="form-group row">
        <label for="introduction", class="col-md-3 mx-auto">説明(140文字以内)</label>
        <div class="col-md-9"><%= f.text_area :introduction,  class: "form-control", id: "introduction" %></div>
      </div>

      <div class="form-group row">
        <label for="tag_name", class="col-md-3 mx-auto">タグ(,区切ると複数登録可能)</label>
        <div class="col-md-9"><%= f.text_field :tag_name,value: @tag_list, class: "form-control", id: "tag_name" %></div>
      </div>

      <div class="form-group row">
        <label for="image", class="col-md-3 mx-auto">画像</label>
        <div class="col-md-9"><%= f.file_field :project_image, accept: 'image/*', id: "image" %></div>
      </div>

      <div class="form-group row">
        <label for="start_date", class="col-md-3 mx-auto">開始日</label>
        <div class="col-md-9"><%= f.date_field :start_date,  class: "form-control", id: "start_date" %></div>
      </div>

      <div class="form-group row">
        <label for="end_date", class="col-md-3 mx-auto">終了日</label>
        <div class="col-md-9"><%= f.date_field :end_date,  class: "form-control", id: "end_date" %></div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 mx-auto">注文ステータス</div>
        <div class="col-md-9 d-flex justify-content-start">
          <div class="mr-3"><%= f.label :order_stauts_under_negotiation, "営業中" %><%= f.radio_button :order_status, "under_negotiation" %></div>
          <div class="mr-3"><%= f.label :order_stauts_ordered, "受注済" %><%= f.radio_button :order_status, "ordered" %></div>
          <div><%= f.label :order_lost_orders, "失注" %><%= f.radio_button :order_status, "lost_orders" %></div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 mx-auto">進捗ステータス</div>
        <div class="col-md-9 d-flex justify-content-start">
          <div class="mr-3"><%= f.label :progress_stauts_not_started_yet, "未着手" %><%= f.radio_button :progress_status, "not_started_yet" %></div>
          <div class="mr-3"><%= f.label :progress_stauts_while_working, "作業中" %><%= f.radio_button :progress_status, "while_working" %></div>
          <div><%= f.label :progress_stauts_completion, "完了" %><%= f.radio_button :progress_status, "completion" %></div>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-3 mx-auto"></div>
        <div class="col-md-9"><%= f.submit "登録", class: "btn btn-sm btn-success"%></div>
      </div>
    <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
      <p class="text-center"><%= link_to "戻る", admin_company_project_path(@company), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>

</div>
